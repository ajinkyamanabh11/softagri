<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for your specific server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">103.26.205.120</domain>
    </domain-config>

    <!-- Base configuration with system certificates -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>